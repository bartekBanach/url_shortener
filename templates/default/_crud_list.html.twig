{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title|trans }}
{% endblock %}

{% block body %}
    <h1 class="font-bold mb-4">{{ page_title|trans }}</h1>

    {% if pagination is defined and pagination.items|length %}

        <div class="text-center my-4">
            {{ knp_pagination_render(pagination) }}
        </div>

        <div class="overflow-x-auto p-5">
            <table class="bg-white min-w-full">
                <thead>
                <tr class="w-full bg-gray-100 border-b">
                    {% for column in columns %}
                        <th class="py-2 px-4 text-left">
                            {% if column.field == 'tags' %}
                                {{ column.label }}
                            {%  else %}
                                {{ knp_pagination_sortable(pagination, column.label|trans, entity ~ '.' ~ column.field) }}

                            {% endif %}
                        </th>
                    {% endfor %}
                    <th class="py-2 px-4 text-left">{{ 'label.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for item in pagination.items %}
                    <tr class="border-b">
                        {% for column in columns %}
                            <td class="py-2 px-4">
                                {% set fieldValue = attribute(item, column.field) %}

                                {% if column.field == 'createdAt' or column.field == 'updatedAt' %}
                                    {{ fieldValue | format_date('long') }}

                                {% elseif fieldValue is iterable %}
                                    <div>
                                        {% for item in fieldValue %}
                                            <span> {{ item.title }}{% if not loop.last %}, {% endif %}

                                            </span>
                                        {% else %}
                                            <span>No items available</span>
                                        {% endfor %}
                                    </div>

                                {% else %}
                                    {{ fieldValue }}
                                {% endif %}
                            </td>
                        {% endfor %}
                        <td class="py-2 px-4">
                            <a href="{{ path(view_route, {id: item.id}) }}" class="text-blue-500 hover:underline" title="{{ 'action.view'|trans }}">
                                {{ 'action.view'|trans }}
                            </a>
                            <a href="{{ path(edit_route, {id: item.id}) }}" class="text-blue-500 hover:underline" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                            <a href="{{ path(delete_route, {id: item.id}) }}" class="text-blue-500 hover:underline" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center my-4">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p class="text-gray-600 mt-4">
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
