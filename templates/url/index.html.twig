
{% extends 'base.html.twig' %}


{% block title %}
    {{ 'title.url_list' | trans }}
{% endblock %}

{% block body %}


    {% include 'default/_crud_list.html.twig' with {
        entity: 'url',
        page_title: 'title.url_list'|trans,
        pagination: pagination,
        columns: [
            { 'label': 'label.id'|trans, 'field': 'id' },
            { 'label': 'label.long_url'|trans, 'field': 'longUrl' },
            { 'label': 'label.short_url'|trans, 'field': 'shortUrl' },
            { 'label': 'label.created_at'|trans, 'field': 'createdAt' },
            { 'label': 'label.tags'|trans, 'field': 'tags' },
            { 'label': 'label.author'|trans, 'field': 'author' },

        ],
        view_route: 'url_show',
        edit_route: 'url_edit',
        delete_route: 'url_delete',
        back_to_list_path: 'url_index',
    } %}

    <div class="tags-list">
        <h3>{{ 'label.all_tags'|trans }}</h3>
        <div class="tags">
            {% for tag in tags %}
                {% set isActive = tag.id == filters.tagId %}
                <a class="btn {{ isActive ? 'btn-primary' : 'btn-outline-primary' }} me-2 mb-2"
                   href="{{ url('url_index', {'tagId': tag.id}) }}"
                   title="{{ tag.title }}">
                    {{ tag.title }}
                </a>
            {% endfor %}
        </div>
    </div>

{% endblock %}